            app:columnCount="3"
            app:layout_heightPercent="50%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="42.5%"
            app:rowCount="4"
            >

            <ImageView
                android:id="@+id/erkek1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
