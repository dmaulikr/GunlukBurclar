            app:columnCount="3"
            app:layout_heightPercent="50%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="42.5%"
            app:rowCount="4">

            <ImageView
                android:id="@+id/kadin1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/burc_koc"/>

            <ImageView
                android:id="@+id/kadin2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="1dp"
                app:layout_columnWeight="1"
