<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_home">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adFacebook">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_about_uulogo"
            app:layout_heightPercent="30%"
            app:layout_marginBottomPercent="2.5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="50%" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_social_facebook"
            app:layout_heightPercent="15%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginTopPercent="3.75%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView1"
            android:layout_toRightOf="@id/imageView2"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_social_twitter"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="3.75%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView1"
            android:layout_toRightOf="@id/imageView3"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_social_youtube"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="3.75%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_social_instagram"
            app:layout_heightPercent="15%"
            app:layout_marginLeftPercent="20%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@id/imageView5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_social_google"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="20%" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView4"
            android:layout_toRightOf="@id/imageView6"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_about_mail"
            app:layout_heightPercent="15%"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:alpha="0.87"
            android:gravity="center"
            android:text="U&amp;U Software Android kullanıcıları için yüksek kaliteli oyun ve uygulamalar geliştirmeyi hedefleyen bir Indie Developerdır."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="22.5%"
            app:layout_widthPercent="95%" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.54"
            android:gravity="center"
            android:text="Copyright © 2016 U&amp;U Software"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="90%" />

    </android.support.percent.PercentRelativeLayout>


    <RelativeLayout
        android:id="@+id/adFacebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>