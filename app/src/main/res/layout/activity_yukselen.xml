<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_home"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adFacebook">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3genelozellikler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2genelozellikler"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:alpha="0.87"
                android:gravity="center"
                android:text="Bu burcun özellikleri arasında bla bla bla bla"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView2genelozellikler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewgenelozellikler"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="21 Mart - 19 Nisan"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/imageViewgenelozellikler"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:contentDescription="Burç"
                android:src="@drawable/burc_koc"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/adFacebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>