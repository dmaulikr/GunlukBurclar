<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adFacebook">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="* Premium sürüm nedir?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView2"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Standart sürümde kullanıcılara çeşitli reklamlar gösterilir. Premium sürümde ise kullanıcılarımıza kesinlikle reklam göstermiyoruz."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView2"
            android:text="* Burç yorumlarını görünmüyor?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView3"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Burç yorumlarını okuyabilmeniz için internet bağlantınızın olması gerekmektedir. Lütfen internet bağlantınızı kontrol edip tekrar deneyiniz."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView4"
            android:text="* Favorilere nasıl yorum eklerim?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView5"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Yorum sayfalarındaki sağ üst köşede yer alan paylaş tuşuna dokunarak yorumu favorilerinize ekleyebilirsiniz. Yorumu paylaşmasanız dahi otomatik olarak favorilere eklenir."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.54"
            android:gravity="center"
            android:text="Copyright © 2016 U&amp;U Software"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />
    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:id="@+id/adFacebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</android.support.v4.widget.DrawerLayout>