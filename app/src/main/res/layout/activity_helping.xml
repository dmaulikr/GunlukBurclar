<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_home">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adMob">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="* Premium sürüm nedir?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView1"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Standart sürümde kullanıcılara çeşitli reklamlar gösterilir. Premium sürümde ise kullanıcılarımıza kesinlikle reklam göstermiyoruz."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView2"
            android:text="* Burç yorumlarını görünmüyor?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView3"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Burç yorumlarını okuyabilmeniz için internet bağlantınızın olması gerekmektedir. Lütfen internet bağlantınızı kontrol edip tekrar deneyiniz."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView4"
            android:text="* Favorilere nasıl yorum eklerim?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="2.5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/textView5"
            android:alpha="0.87"
            android:gravity="center"
            android:text="Yorum sayfalarındaki sağ üst köşede yer alan paylaş tuşuna dokunarak yorumu favorilerinize ekleyebilirsiniz. Yorumu paylaşmasanız dahi otomatik olarak favorilere eklenir."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.54"
            android:gravity="center"
            android:text="Copyright © 2016 U&amp;U Software"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="90%" />
    </android.support.percent.PercentRelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adMob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-1576175228836763/1808364538" />

</RelativeLayout>