<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HelpingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".HelpingActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/baslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Sıkça Sorulan Sorular"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/baslik"
                android:layout_marginTop="30dp"
                android:text="Favorilerime nasıl eklerim?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/q1"
                android:layout_marginTop="10dp"
                android:text="Yorum sayfalarında sağ üst köşedeki yıldız butonuna basarak favorilerinize ekleyebilirsiniz." />

            <TextView
                android:id="@+id/q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/a1"
                android:layout_marginTop="15dp"
                android:text="Favorilerimden nasıl çıkarırım?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/q2"
                android:layout_marginTop="10dp"
                android:text="Sol menüden ulaşabileceğiniz favoriler sayfasından istediğiniz yorumu üzerine tıklayarak silebilirsiniz." />

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/a2"
                android:layout_marginTop="15dp"
                android:text="Premium sürüm ile standart sürüm arasındaki fark ne?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/q3"
                android:layout_marginTop="10dp"
                android:text="Premium sürümde kullanıcılarımıza kesinlikle reklam göstermiyoruz. Ayrıca Premium sürüm kullanıcıları bildirim ayarını değiştirebilirler." />

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/a3"
                android:layout_marginTop="15dp"
                android:text="Daha önce paylaştıklarıma nasıl ulaşabilirim?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/q4"
                android:layout_marginTop="10dp"
                android:text="Sol menüden ulaşabileceğiniz paylaşılanlar sayfasından daha önceden paylaştığınız yorumlara ulaşabilir, onları tekrar paylaşabilir ya da silebilirsiniz." />

            <TextView
                android:id="@+id/q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/a4"
                android:layout_marginTop="15dp"
                android:text="Sorunuma bu sayfada cevap bulamadım?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/q5"
                android:layout_marginTop="10dp"
                android:text="Her türlü istek, öneri, şikayet ya da hata raporlarınızı contact@uusoftware.org adresine iletebilirsiniz." />
        </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>