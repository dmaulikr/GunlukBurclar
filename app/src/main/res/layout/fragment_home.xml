<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bannerLayout">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_koc"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_boga"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_ikizler"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView1"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_yengec"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_aslan"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView3"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_basak"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView4"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_terazi"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_akrep"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView6"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_yay"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView7"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_oglak"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_kova"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView9"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/burc_balik"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="33.3%" />
    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:id="@+id/bannerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_admob" />

        <RelativeLayout
            android:id="@+id/adFacebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>